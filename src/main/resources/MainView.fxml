    <Button text="Visualizzazione dei migliori 10 drink!" onAction="#getTenBestDrinks" style="-fx-font-size: 12px;" fx:id="btnOp19"/>
    <Button text="Visualizzazione il miglior Tavolo!" onAction="#getBestTable" style="-fx-font-size: 12px;" fx:id="btnOp20"/>
    <Button text="Visualizzazione il miglior PR!" onAction="#getBestPR" style="-fx-font-size: 12px;" fx:id="btnOp21"/>
      
